#!/bin/bash

export JAVA_HOME=/usr/java/jdk1.6.0_26
export JENKINS_HTTP_PORT=8110
export JENKINS_PREFIX=jenkins_test

$JAVA_HOME/bin/java -jar jenkins-cli.jar -i ~/.ssh/id_rsa_iwd01 -s http://localhost:$JENKINS_HTTP_PORT/$JENKINS_PREFIX safe-shutdown

while true; do
    if [ -z $(ps -f -u $UID | grep "jenkins.war" | grep -v grep | awk '{ print $2 }') ]
    then
        break
    fi
    sleep 1
done

sudo /sbin/service jenkins_test start

